<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".InputPendapatanLainActivity"
    android:background="@color/white"
    android:padding="16dp">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Header -->
            <TextView
                android:id="@+id/HeaderPendapatan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pendapatan Lain-lain"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="16dp" />

            <TextView
                android:id="@+id/labelKodeAkun"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Kode Akun"
                android:inputType="numberDecimal"
                android:enabled="false"
                android:textSize="16sp"
                android:layout_marginBottom="8dp"
                android:textColor="@color/black"
                />

            <TextView
                android:id="@+id/tvKodeAkun"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Kode Akun"
                android:textSize="16sp"
                android:inputType="numberDecimal"
                android:enabled="false"
                android:textColor="@color/black"
                android:layout_marginBottom="16dp"
                />

            <TextView
                android:id="@+id/labelIDPendapatan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ID Pendapatan"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/tvIDPendapatan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Loading..."
                android:textSize="16sp"
                android:padding="12dp"
                android:layout_marginBottom="16dp"
                android:textColor="@color/black"
                android:gravity="center_vertical" />

            <TextView
                android:id="@+id/labelTanggalTransaksi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tanggal Transaksi"
                android:textSize="16sp"
                android:textColor="@color/black"
                />

            <TextView
                android:id="@+id/tvTanggalTransaksi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:padding="12dp"
                android:layout_marginBottom="16dp"
                android:textColor="@color/black"
                android:gravity="center_vertical"/>

            <TextView
                android:id="@+id/labelNamaPendapatan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nama Pendapatan"
                android:textSize="16sp"
                android:textColor="@color/black"
                />

            <EditText
                android:id="@+id/etNamaPendapatan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Masukkan nama pendapatan"
                android:textColor="@color/black"
                android:layout_marginBottom="7dp"
                />

            <TextView
                android:id="@+id/labelJumlahPendapatan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Jumlah Pendapatan"
                android:textSize="16sp"
                android:paddingTop="9dp"
                android:textColor="@color/black"
                />

            <EditText
                android:id="@+id/etJumlahPendapatan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Masukkan jumlah pendapatan"
                android:textColor="@color/black"
                />

            <Button
                android:id="@+id/btnSimpan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Simpan" />
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>

